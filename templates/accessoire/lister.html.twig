{% extends 'base.html.twig' %}
   {% block head %}
      {% block styleAndJS %}
          <link href="../../public/css/metro-all.css" rel="stylesheet" >
          <link href="../../public/css/style.css" rel="stylesheet" >
          <script type="text/javascript" src="../../public/js/metro.js"></script>
          <script type="text/javascript" src="../../public/js/metro.js"></script>
      {% endblock %}
    {% endblock %}
{% block body %}
{% block stylesheet %}
        <div class="container-fluid">
          <div class="cell-md-8">
            <div class="info-panel rounded no-overflow shadow-3">
              <div class="info-panel-header bg-black fg-white text-bold">
                <h3> Liste des accessoires </h3>
              </div>
              <table class="table table-blue cell-border striped">
               <tr>
                  <td><strong>Id</strong></td>
                  <td><strong>Libelle</strong></td>
                  <td><strong>Consulter</strong></td>

</tr>
{% for a in pAccessoire %}
<tr>
  <td>{{ a.id }}</td>
  <td>{{ a.libelle }}</td>
  <td><a href={{path('accessoireConsulter', { 'id': a.id })   }}"><button class="button primary small drop-shadow">Consulter</button></a></td>
</tr>
{% else %}
<tr>
<td>Aucun accessoire n'a été trouvé.</td>
</tr>
{% endfor %}
</table>
{% endblock %}
{% endblock %}
