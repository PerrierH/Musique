{% extends 'base.html.twig' %}
   {% block head %}
      {% block styleAndJS %}
          <link href="../../public/css/metro-all.css" rel="stylesheet">
          <link href="../../public/css/style.css" rel="stylesheet">
          <script type="text/javascript" src="../../public/js/metro.js"></script>
          <script type="text/javascript" src="../../public/js/metro.js"></script>
      {% endblock %}
    {% endblock %}
{% block body %}
  {% block stylesheet %}
  <div class="container-fluid">
    <div class="cell-md-8">
      <div class="info-panel rounded no-overflow shadow-3">
        <div class="info-panel-header bg-black fg-white text-bold">
            <h3> Liste des élèves</h3>
          </div>
              <table class="table table-border cell-border">
                    <td><strong>Nom</strong></td>
                    <td><strong>Prénom</strong></td>
                    <td><strong>Numéro de rue</strong></td>
                    <td><strong>Rue</strong></td>
                    <td><strong>Code postal</strong></td>
                    <td><strong>Ville</strong></td>
                    <td><strong>Téléphone</strong></td>
                    <td><strong>Mail</strong></td>
                    <td><strong>Consulter</strong></td>

                {% for e in pEleves %}
                <tr>
                  <td>{{e.nom }}</a></td>
                  <td>{{e.prenom }}</a></td>
                  <td>{{e.numRue }}</td>
                  <td>{{e.rue }}</a></td>
                  <td>{{e.copos }}</a></td>
                  <td>{{e.ville }}</a></td>
                  <td>{{e.tel }}</a></td>
                  <td>{{e.mail }}</a></td>
                  <td><a href="{{ path('eleveConsulter', { 'id': e.id }) }}"><button class="button primary small drop-shadow">Consulter</button></a></td>
                  {% else %}
                <tr>
                  <td>Aucun eleve n'a été trouvé.</td>
                </tr>
                {% endfor %}
              </table>
      {% endblock %}
  {% endblock %}
