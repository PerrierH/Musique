{% extends 'base.html.twig' %}
   {% block head %}
      {% block styleAndJS %}
          <link href="../../public/css/metro-all.css" rel="stylesheet">
          <link href="../../public/css/style.css" rel="stylesheet">
          <script type="text/javascript" src="../../public/js/metro.js"></script>
          <script type="text/javascript" src="../../public/js/metro.js"></script>
      {% endblock %}
    {% endblock %}
{% block body %}
  {% block stylesheet %}
  <div class="container-fluid">
    <div class="cell-md-8">
      <div class="info-panel rounded no-overflow shadow-3">
        <div class="info-panel-header bg-black fg-white text-bold">
            <h3> Liste des cours</h3>
          </div>
              <table class="table table-blue cell-border striped">
                    <td><strong>Libelle</strong></td>
                    <td><strong>Age minimum</strong></td>
                    <td><strong>Age maximum</strong></td>
                    <td><strong>Nombre place</strong></td>
                    <td><strong>type de cour</strong></td>
                    <td><strong>Consulter</strong></td>

                {% for c in pCours %}
                <tr>
                  <td>{{c.libelle }}</a></td>
                  <td>{{c.ageMini }}</a></td>
                  <td>{{c.ageMaxi }}</td>
                  <td>{{c.nbPlaces }}</a></td>
                  <td>{{c.typeCours }}</a></td>
                  <td><a href="{{ path('coursConsulter', { 'id': c.id }) }}"><button class="button primary small drop-shadow">Consulter</button></a></td>
  
                  {% else %}
                <tr>
                  <td>Aucun cour n'a été trouvé.</td>
                </tr>
                {% endfor %}
              </table>
      {% endblock %}
  {% endblock %}
